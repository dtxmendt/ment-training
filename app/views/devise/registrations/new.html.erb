 <%= render 'homes/header' ,taxons:@taxons %>
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class = "row ">
  <div class = col-6>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true,class: "form-control" %>
  </div>
   <div class="field">
    <%= f.label :date %><br />
    <%= f.date_field :date, start_year: 1800, end_year: Time.now.year,class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
    
  </div>
 </div>
  <div class = "col-6"> 
     <%= f.fields_for :addresses do |ff| %>
    <div class ="field" >
    <%= ff.label :address1 %>
    <%= ff.text_field :address1, class: "form-control" %>
    </div>
    <div class ="field" >
    <%= ff.label :address2 %>
    <%= ff.text_field :address2, class: "form-control" %>
    </div>
    <div class ="field" >
    <%= ff.label :phone %>
    <%= ff.text_field :phone, class: "form-control" , type: "number",:required => true%>
    </div>
    <div class ="field" >
    <%= ff.label :city %>
    <%= ff.text_field :city, class: "form-control" %>
    </div>
    <div class ="field" >
    <%= ff.label :zipcode %>
    <%= ff.text_field :zipcode, class: "form-control" %>
    </div>
    <div class ="field" >
    <%= ff.label :company %>
    <%= ff.text_field :company, class: "form-control" %>
    </div>
  <% end %>
  </div>
 </div>
 <div class="actions p-2">
    <%= f.submit "Sign up" ,class:"btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
